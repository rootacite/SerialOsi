<Window x:Class="SerialOsiGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SerialOsiGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" MouseMove="Window_MouseMove" KeyDown="Window_KeyDown">
    <Grid>
        <Viewbox Stretch="UniformToFill">
            <Canvas Height="1080" Width="1920">
                <Image x:Name="Plant" Height="1080" Canvas.Left="1920" Canvas.Top="0" Width="0" Stretch="Fill"/>
            </Canvas>
        </Viewbox>
    </Grid>
</Window>
